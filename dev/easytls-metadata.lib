# Loaded message
easytls_metadata_lib_ver ()
{
	[ -n "${EASYTLS_SILENT}" ] && return 0
	[ -n "${EASYTLS_VERBOSE}" ] || return 0
	"${EASYTLS_PRINTF}" '%s\n' "* easytls-metadata.lib loaded"
} # => easytls_tctip_lib_ver ()

