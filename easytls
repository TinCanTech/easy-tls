	EASYTLS_QTEXT='
  Enter (y)es or (n)o:'
	while :
	do
		interactive_question
		EASYTLS_ANSWER="${EASYTLS_ANSWER:-$default}"
		case "$EASYTLS_ANSWER" in
			Y|y|Yes|yes|YES)
				opt_openvpn_pid='writepid'
				break
			;;
			N|n|No|no|NO)
				break
			;;
		esac
	done

	easytls_verbose
	easytls_verbose "Config: $opt_hw_required"
}

