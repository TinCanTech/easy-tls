  Enter (y)es or (n)o:'
	while :
	do
		interactive_question
		ia_answer="${ia_answer:-$default}"
		case "$ia_answer" in
			Y|y|Yes|yes|YES)
				opt_client_connect=1
				break
			;;
			N|n|No|no|NO)
				break
			;;
			*)
				: # Ignore
			;;
		esac
	done

	easytls_verbose
	easytls_verbose "Config: $opt_hw_required"
} # => interactive_client_connect ()

